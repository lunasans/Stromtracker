# Sicherheit f체r Scripts-Ordner
# Verhindert direkten Web-Zugriff auf Cron-Scripts

# Alle HTTP-Zugriffe verbieten
<Files "*">
    Order Deny,Allow
    Deny from all
</Files>

# Nur CLI-Zugriff erlauben
<FilesMatch "\.(php)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Alternative: 404 f체r alle Dateien
# ErrorDocument 403 /404.php

# Zus채tzliche Sicherheit
Options -Indexes
Options -ExecCGI

# Server-Info verstecken
ServerSignature Off

# Log-Dateien sch체tzen (falls im scripts Ordner)
<FilesMatch "\.(log|txt)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
